{
  "manifest_version": 2,
  "name": "gpt-speller",
  "description": "A ChatGPT based assistant to help with the spelling.",
  "version": "1.0",
  "homepage_url": "https://roganov.me",
  "icons": {
    "48": "check.png"
  },
  "permissions": ["activeTab", "storage", "https://api.openai.com/"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "check.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gpt-speller@roganov.me",
      "strict_min_version": "42.0"
    }
  }
}
